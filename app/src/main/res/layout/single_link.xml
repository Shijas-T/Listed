<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/single_link">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardElevation="1dp"
        app:cardCornerRadius="10dp"
        android:id="@+id/card_link"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="15dp"
        android:layout_gravity="center">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/img_view_link"/>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="14dp"
                android:layout_toRightOf="@+id/img_view_link"
                android:text="Sample link name..."
                android:maxLines="1"
                android:ems="10"
                android:ellipsize="end"
                android:textColor="#000000"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv_times_ago"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="2dp"
                android:layout_below="@+id/tv_title"
                android:layout_toRightOf="@+id/img_view_link"
                android:text="22 Aug 2022"
                android:textColor="#999CA0"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_total_clicks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:layout_marginTop="14dp"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="92dp"
                android:text="2323"
                android:textColor="#000000"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:layout_marginTop="2dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/tv_total_clicks"
                android:text="Clicks"
                android:textColor="#999CA0"
                android:textSize="12sp"/>

            <RelativeLayout
                android:id="@+id/rectangle_8"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="76dp"
                android:background="@drawable/rectangle">
                <TextView
                    android:id="@+id/tv_smart_link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="14dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="12dp"
                    android:layout_centerVertical="true"
                    android:text="https://samplelink.oia.bio/ashd..."
                    android:textColor="#0E6FFF"
                    android:textSize="14sp"/>
            </RelativeLayout>
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>